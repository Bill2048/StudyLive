<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_live"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.chaoxing.study.LiveActivity">

    <RelativeLayout
        android:id="@+id/debug_control_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/debug_btn_push"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PUSH" />

        <Button
            android:id="@+id/debug_btn_pull"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="PULL" />

    </RelativeLayout>

    <FrameLayout
        android:id="@+id/live_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/debug_control_panel">

        <include layout="@layout/view_live_content" />
    </FrameLayout>
</RelativeLayout>
